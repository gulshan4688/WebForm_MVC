@model WebApplicationMVCCrudwithAjax.Models.Employee
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


<form asp-action="Delete" method="post">

	<div asp-validation-summary="All" class="text-danger"></div>

	<!-- Emp Name -->
	<div class="form-group mb-3 col-md-1 w-25">
		<label asp-for="Name" class="form-label">Emp Name</label>
		<input asp-for="Name" class="form-control" placeholder="Enter Employee Name" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<!-- Emp Id -->
	<div class="form-group mb-3 w-25">
		<label asp-for="Id" class="form-label">Emp Id</label>
		<input asp-for="Id" class="form-control" placeholder="Enter Employee Id" />
		<span asp-validation-for="Id" class="text-danger"></span>
	</div>

	<!-- Emp Code -->
	<div class="form-group mb-3 w-25">
		<label asp-for="Code" class="form-label">Emp Code</label>
		<input asp-for="Code" class="form-control" placeholder="Enter Employee Code" />
		<span asp-validation-for="Code" class="text-danger"></span>
	</div>

	<!-- Date of Birth -->
	<div class="form-group mb-3 w-25">
		<label asp-for="Dob" class="form-label">Date of Birth</label>
		<input asp-for="Dob" class="form-control" type="date" />
		<span asp-validation-for="Dob" class="text-danger"></span>
	</div>
	<!-- City -->
	<div class="form-group mb-3 w-25">
		<label asp-for="City" class="form-label">City</label>
		<select asp-for="City" class="form-control" asp- items="ViewBag.Cities">
			<option value="">-- Select City --</option>
		</select>
		<span asp-validation-for="City" class="text-danger"></span>
	</div>

	<!-- Gender -->
	<div class="form-group mb-3">
		<label class="form-label">Gender</label><br />
		<input type="radio" asp-for="Gender" value="Male" /> Male
		<input type="radio" asp-for="Gender" value="Female" /> Female
		<input type="radio" asp-for="Gender" value="Other" /> Other
		<span asp-validation-for="Gender" class="text-danger"></span>
	</div>

	<!-- IsActive -->
	<div class="form-group mb-3">
		<label class="form-label">Is Active</label><br />
		<input type="radio" asp-for="Active" value="Yes" /> Yes
		<input type="radio" asp-for="Active" value="No" /> No
		<span asp-validation-for="Active" class="text-danger"></span>
	</div>

	<!-- Image -->
	<div class="form-group mb-3">
		<label asp-for="Image" class="form-label">Image</label>
		<input asp-for="Image" type="file" class="form-control" />
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>

	<!-- Buttons -->
	<div class="d-flex ml-4">
		<button type="submit" class="btn btn-warning">Delete</button>
		<a asp-controller="Employee" asp-action="Index" class="btn btn-danger">Cancel</a>
	</div>
</form>