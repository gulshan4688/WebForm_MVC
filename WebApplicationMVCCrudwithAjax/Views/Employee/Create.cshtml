@model WebApplicationMVCCrudwithAjax.Models.Employee
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<form asp-action="Create" method="post" enctype="multipart/form-data">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group mb-3 w-25">
		<label asp-for="Name" class="form-label">Emp Name</label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group mb-3 w-25">
		<label asp-for="Code" class="form-label">Emp Code</label>
		<input asp-for="Code" class="form-control" />
		<span asp-validation-for="Code" class="text-danger"></span>
	</div>

	<div class="form-group mb-3 w-25">
		<label asp-for="Dob" class="form-label">Date of Birth</label>
		<input asp-for="Dob" type="date" class="form-control" />
		<span asp-validation-for="Dob" class="text-danger"></span>
	</div>

	<div class="form-group mb-3 w-25">
		<label asp-for="City" class="form-label">City</label>
		<select asp-for="City" class="form-control" asp-items="ViewBag.Cities">
			<option value="">-- Select City --</option>
		</select>
		<span asp-validation-for="City" class="text-danger"></span>
	</div>
	@* Gender *@
	<div class="form-group mb-3">
		<label class="form-label d-block">Gender</label>
		<label class="form-check form-check-inline">
			<input class="form-check-input" type="radio" asp-for="Gender" value="Male"> Male
		</label>
		<label class="form-check form-check-inline">
			<input class="form-check-input" type="radio" asp-for="Gender" value="Female"> Female
		</label>
		<label class="form-check form-check-inline">
			<input class="form-check-input" type="radio" asp-for="Gender" value="Other"> Other
		</label>
		<span asp-validation-for="Gender" class="text-danger"></span>
	</div>
	<div class="form-group mb-3 w-25" ">
		<label class="form-label d-block">Is Active</label>
		<label class="form-check form-check-inline">
			<input class="form-check-input" type="radio" asp-for="Active" value="Yes"> Yes
		</label>
		<label class="form-check form-check-inline">
			<input class="form-check-input" type="radio" asp-for="Active" value="No"> No
		</label>
		<span asp-validation-for="Active" class="text-danger"></span>
	</div>
	<div class="form-group mb-3 w-25" ">
		<label asp-for="Image" class="form-label">Image</label>
		<input asp-for="Image" type="file" class="form-control" />
		<span asp-validation-for="Image" class="text-danger">

		</span>
	</div>

	<div class="d-flex ml-4 gap-3 mt-3">
		<button type="submit" class="btn btn-primary">Submit</button>
		<a asp-controller="Employee" asp-action="Index" class="btn btn-danger">Cancel</a>
	</div>
</form>
